<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lhh.apst.advancedpagerslidingtabstrip" >

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"/>


    <application

        android:allowBackup="true"
        android:name=".App"
        android:icon="@mipmap/logo"
        android:supportsRtl="true"
        android:label="BookCam"
        >
        <activity
            android:name=".SplashActivity"
            android:theme="@style/AppTheme">
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
        android:name=".LoginActivity"
        android:label="登入"
        android:theme="@style/AppTheme"
        >
    </activity>



        <activity
            android:name=".CreateActivity"
            android:label="註冊"
            android:theme="@style/AppTheme"
            >
        </activity>


        <activity
            android:name=".ShowAllImageActivity"
            android:label="選照片"
            android:theme="@style/AppTheme"
            >
        </activity>

        <activity
            android:name=".TabActivity"
            android:label="我的書櫃"
            android:theme="@style/AppTheme"
            >
        </activity>

        <activity
            android:name=".LoadingActivity"
            android:label="跳轉畫面"
            android:theme="@style/AppTheme"
            >
        </activity>

        <activity
            android:name=".Load"
            android:label="跳轉畫面2"
            android:theme="@style/AppTheme"
            >
        </activity>


        <activity
            android:name="com.lhh.apst.Camera.TakePicture"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"
            >
        </activity>

        <activity
            android:name="com.lidong.photopicker.PhotoPickerActivity"
            android:theme="@style/PhotoPickerTheme"
            android:configChanges="orientation|screenSize"/>
        <activity android:name="com.lidong.photopicker.PhotoPreviewActivity"
            android:theme="@style/PhotoPickerTheme"/>

    </application>

</manifest>
